                                            {
                                                if (IsParent((int)item.CId))
                                                {
                                                    <optgroup label="&nbsp;&nbsp;@item.CName" />
                                                    foreach (var c in GetCatList((int)item.CId))
                                                    {
                                                        <option value="@c.CId">
                                                            @c.CName
                                                        </option>
                                                    }
                                                }
                                            }
                                        }
                                    </select>
                                    <span class="help-inline red"><?php echo form_error('cid');?></span>
                                </div>
