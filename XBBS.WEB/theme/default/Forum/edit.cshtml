@model XBBS.Models.Forums
@functions{
    public bool IsParent(int cid)
    {
        foreach (var item in ViewBag.Category)
        {
            if (item.PId == cid)
                return true;
        }
        return false;
    }

    public List<XBBS.Models.Category> GetCatList(int pid)
    {
        List<XBBS.Models.Category> list = new List<XBBS.Models.Category>();
        foreach (var item in ViewBag.Category)
        {
            if (item.PId == pid)
            {
                list.Add(item);
            }
        }
        return list;

    }
}
