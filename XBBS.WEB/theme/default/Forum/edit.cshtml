                                        <span class="help-inline red"><?php echo form_error('content');?></span>
                                    </div>
                                </div>
                                <div class="col-sm-9">
                                    <input class="btn btn-primary btn-inverse" data-disable-with="正在提交" name="commit" type="submit" value="修改" />
                                </div>
