                                    {
                                        if (IsParent((int)item.CId))
                                        {
                                            <optgroup label="&nbsp;&nbsp;@item.CName" />
                                            foreach (var cat in GetCatList((int)item.CId))
                                            {
                                                <option value="@cat.CId">
