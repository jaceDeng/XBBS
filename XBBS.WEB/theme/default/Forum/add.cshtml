                                    <span class="help-inline red"><?php echo form_error('title');?></span>
                                </div>
                                <div class="form-group" style="width:300px; margin-left: 15px; margin-top: 10px;">
                                    <label for="category">版块</label>
                                    <select name="cid" id="cid" class="form-control">
